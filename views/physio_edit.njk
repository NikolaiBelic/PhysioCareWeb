{% extends "base.njk" %}

{% block titulo %}Physios | Edit{% endblock %}

{% block contenido %}

    <h1>Edición de fisio</h1>

    {% if errores.general %}
        <p class="alert alert-danger">{{ errores.general }}</p>
    {% endif %}

    <form action="/physios/{{ physio.id }}" method="post" enctype="multipart/form-data">
        <input type="hidden" name="_method" value="put">
        <div class="form-group">
            <label>Name:
                <input type="text" class="form-control" name="name" value="{{ physio.name }}">
            </label>
            {% if errores.name %}
                <p class="text-danger">{{ errores.name }}</p>
            {% endif %}
        </div>
        <div class="form-group">
            <label>Surname:
                <input type="text" class="form-control" name="surname" value="{{ physio.surname }}">
            </label>
            {% if errores.surname %}
                <p class="text-danger">{{ errores.surname }}</p>
            {% endif %}
        </div>
        <div class="form-group">
            <label>Specialty:
        <select class="form-control" name="specialty">
                    <option value="Sports" {% if physio.specialty == 'Sports' %}selected{% endif %}>Sports</option>
                    <option value="Neurological" {% if physio.specialty == 'Neurological' %}selected{% endif %}>Neurological</option>
                    <option value="Pediatric" {% if physio.specialty == 'Pediatric' %}selected{% endif %}>Pediatric</option>
                    <option value="Geriatric" {% if physio.specialty == 'Geriatric' %}selected{% endif %}>Geriatric</option>
                    <option value="Oncological" {% if physio.specialty == 'Oncological' %}selected{% endif %}>Oncological</option>
                </select>
            </label>
            {% if errores.specialty %}
                <p class="text-danger">{{ errores.specialty }}</p>
            {% endif %}
        </div>
        <div class="form-group">
            <label>License number:
                <input type="text" class="form-control" name="licenseNumber" value="{{ physio.licenseNumber }}">
            </label>
            {% if errores.licenseNumber %}
                <p class="text-danger">{{ errores.licenseNumber }}</p>
            {% endif %}
        </div>
        <div class="form-group">
            <label>Image:
                <input type="file" class="form-control" name="image">
            </label>
            <p>Si no selecciona una imagen, se mantendrá la actual. Imagen actual:</p>
            <img src="/public/uploads/{{ physio.image }}" width="100">
        </div>
        <button type="submit" class="btn btn-primary">
            Enviar
        </button>
    </form>

{% endblock %}