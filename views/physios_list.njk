{% extends "base.njk" %}
{% block titulo %}Pacientes | Listado{% endblock %}
{% block contenido %}
    <h1>Listado de fisios</h1>
    <table width="100%">
        {% for physio in physios %}
            <tr>
                {% if loop.index % 2 == 0 %}
                    <td class="par">{{ physio.name }} {{ physio.surname }}</td>
                {% else %}
                    <td class="impar">{{ physio.name }} {{ physio.surname }}</td>
                {% endif %}
                <td>
                    <a class="btn btn-success" href="/physios/{{ physio.id }}">Details</a>
                    <form style="display:inline" action="/physios/{{ physio.id }}" method="post">
                        <input type="hidden" name="_method" value="delete"/>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    <a class="btn btn-primary" href="/physios/editar/{{ physio.id }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td>No hay fisios que mostrar.</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}